<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".PuzzleFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout">
            <Button
                    android:text="&lt;"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


            <TextView android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="3"
                      android:gravity="center_vertical|start"
                      android:textSize="20sp"
                      android:text="1. Boolean"
                      android:layout_gravity="start"/>
            <ImageButton
                    android:src="@android:drawable/ic_menu_view"
                    android:layout_width="0dp"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            <ImageButton
                    android:src="@android:drawable/ic_menu_help"
                    android:layout_width="0dp"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            <ImageButton
                    android:src="@android:drawable/ic_menu_preferences"
                    android:layout_width="0dp"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

        </LinearLayout>
        <View style="@style/Divider"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="4"
                      android:padding="8dp"
                      android:text="Подберите входные параметры программы так, чтобы условие condition было верно"
                      android:layout_gravity="start"/>


        </LinearLayout>
        <View style="@style/Divider"/>

        <TextView
                android:id="@+id/puzzleCodeTextView"
                android:text="TextView"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:minLines="30"
        />
        <TextView
                android:id="@+id/puzzleConsoleTextView"
                android:text="> console output"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/puzzleTextInput1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:autofillHints="false"
                    android:inputType="text"
                    android:hint="Type answer here"
            />
            <ImageButton
                    android:id="@+id/runPuzzleButton"

                    android:src="@android:drawable/ic_media_play"


                    android:layout_width="0dp"

                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>

